{
  "openapi": "3.0.0",
  "info": {
    "title": "Stock API",
    "description": "An API created to manage a stock",
    "contact": {
      "email": "viphaelnev@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Main server"
    }
  ],
  "paths": {
    "/products/": {
      "post": {
        "summary": "Product register",
        "tags": ["Products"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                  "$ref": "#/components/schemas/CreateProduct"
                },
                "examples": {
                  "product": {
                    "value": {
                      "name": "Bread",
                      "price": 1.20,
                      "sector": "1",
                      "quantity": 10
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "description": "Product successfully created"
                      },
                      "data": {
                        "$ref": "#/components/schemas/Product"
                      } 
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request errors",
              "content": {
                "application/json": {
                  "schema": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "string",
                            "description": "fail"
                          },
                          "message": {
                            "type": "string",
                            "description": "Product already exists"
                          }
                        }
                      },

                      {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "string",
                            "description": "fail"
                          },
                          "message": {
                            "type": "string",
                            "description": "Validation error: ${type of validation error}"
                          }
                        }
                      }
                    ]
                        

                  },
                  "example": {
                      "ExistentProduct": 
                      { 
                        "status": "fail",
                        "message": "Product already exists"
                      },
                      "ValidationError": 
                      {
                        "status": "fail",
                        "message": "Validation error: ${type of validation error}"
                      }
                  }
                }
              }
            }
          }
        }
      },
      "/products/product/${id}": {
        "get": {
          "summary": "Get a product from it's id",
          "tags": ["Products"],
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "type": "string",
              "description": "Product id",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            },
            "404": {
              
              "example": "Product not found"
            }
          }
        }        
      }
    },
  "components": {
    "schemas": {
      "CreateProduct": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "sector": {
            "type": "string"
          },
          "quantity": {
            "type": "number",
            "format": "int32"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "sector": {
            "type": "string"
          },
          "quantity": {
            "type": "number",
            "format": "int32"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "total_income": {
            "type": "number",
            "format": "double"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}

